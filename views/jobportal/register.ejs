<% layout('layouts/boilerplate') %>

<body>

    <div class="container mt-5 mb-5">
        <div class="job-form">
            <h2 class="text-center mb-4">Submit Job</h2>
            <form action="/jobportal/register/submit" method="POST">
                <div class="form-group">
                    <label for="job-title" class="form-label">Job Title:</label>
                    <input type="text" class="form-control" id="job-title" name="job_title" placeholder="Enter job title" required>
                </div>

                <div class="form-group mt-4">
                    <label for="job-description" class="form-label">Job Description:</label>
                    <textarea class="form-control" id="job-description" name="description" rows="4" placeholder="Enter job description" required></textarea>
                </div>

                <div class="form-group mt-4">
                    <label for="company-name" class="form-label">Company Name:</label>
                    <input type="text" class="form-control" id="company-name" name="company_name" placeholder="Enter company name" required>
                </div>

                <div class="form-group mt-4">
                    <label for="registration-date-time" class="form-label">Last Registration Date and Time:</label>
                    <input type="datetime-local" class="form-control" id="registration-date-time" name="last_registration_date" required>
                </div>

                <div class="form-group mt-4">
                    <label for="job-link" class="form-label">Job Link:</label>
                    <input type="url" class="form-control" id="job-link" name="job_link" placeholder="Enter job link" required>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-submit mt-4">Submit Job</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
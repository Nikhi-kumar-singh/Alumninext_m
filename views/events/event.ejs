    <script>
        const images = document.querySelectorAll('.image-container');
        const leftTexts = document.querySelectorAll('.left-text');
        const rightTexts = document.querySelectorAll('.right-text');
        let currentIndex = 0;

        function showNextImage() {
            images[currentIndex].classList.remove('active');
            leftTexts[currentIndex].classList.remove('active');
            rightTexts[currentIndex].classList.remove('active');

            currentIndex = (currentIndex + 1) % images.length;

            images[currentIndex].classList.add('active');
            leftTexts[currentIndex].classList.add('active');
            rightTexts[currentIndex].classList.add('active');
        }

        setInterval(showNextImage, 3000); // Change image every 3 seconds

        const boxes = document.querySelectorAll('.box');

        function fadeInCards() {
            boxes.forEach((box, index) => {
                setTimeout(() => {
                    box.classList.add('visible');
                }, index * 300); // Stagger the fade-in
            });
        }

        function rotateCards() {
            boxes.forEach((box) => {
                box.classList.add('rotate');
                setTimeout(() => {
                    box.classList.remove('rotate');
                }, 600); // Duration of the rotation animation
            });
        }

        // Initial fade-in on page load
        setTimeout(() => {
            fadeInCards();
            setInterval(rotateCards, 10000); // Rotate cards every 10 seconds
        }, 1000); // Delay fade-in by 1 second
    </script>
    

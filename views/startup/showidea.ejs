<% layout('layouts/boilerplate') %>
<body>
    <div class="container mt-5">
    <div class="row">
        <% allIdea.forEach(function(idea) { %> <!-- Loop through the ideas array to create a card for each idea -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <!-- Idea Title -->
                    <h5 class="card-title"><%= idea.idea_title %></h5>

                    <!-- Description -->
                    <p class="card-text"><strong>Description:</strong> <%= idea.description %></p>

                    <!-- Impact -->
                    <p class="card-text"><strong>Impact:</strong> <%= idea.impact %></p>

                    <!-- Target Audience -->
                    <p class="card-text"><strong>Target Audience:</strong> <%= idea.target_audience %></p>

                    <!-- Expected Price -->
                    <% if (idea.expected_price) { %> <!-- Show this field only if it's provided -->
                    <p class="card-text"><strong>Expected Price:</strong> $<%= idea.expected_price %></p>
                    <% } %>
                    
                    <!-- LinkedIn URL -->
                    <% if (idea.linkedin_profile) { %> <!-- Show this field only if it's provided -->
                    <p class="card-text"><strong>LinkedIn:</strong> 
                        <a href="<%= idea.linkedin_profile %>" target="_blank"><%= idea.linkedin_profile %></a>
                    </p>
                    <div class="text-center">
                        <a href="<%= idea.linkedin_profile %>" target="_blank" class="btn btn-primary">Connect</a>
                    </div>
                    <% } %>
               

                    <!-- Idea PDF -->
                    <% if (idea.idea_pdf) { %> <!-- Show this field only if the PDF is uploaded -->
                    <p class="card-text"><strong>Idea PDF:</strong> <a href="/uploads/ideas/<%= idea.idea_pdf %>" target="_blank">View PDF</a></p>
                    <% } %>

                    <!-- Video Explanation -->
                    <% if (idea.video_explanation) { %> <!-- Show this field only if the video is uploaded -->
                    <p class="card-text"><strong>Video Explanation:</strong> <a href="/uploads/ideas/<%= idea.video_explanation %>" target="_blank">Watch Video</a></p>
                    <% } %>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>
</body>
